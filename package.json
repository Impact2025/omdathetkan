{
  "name": "pureliefde",
  "version": "1.0.0",
  "private": true,
  "description": "Private couples messaging PWA for intimate communication",
  "scripts": {
    "dev": "pnpm --filter @pureliefde/web dev",
    "dev:api": "pnpm --filter @pureliefde/api dev",
    "dev:all": "pnpm run --parallel dev dev:api",
    "build": "pnpm --filter @pureliefde/web build",
    "build:api": "pnpm --filter @pureliefde/api build",
    "build:all": "pnpm run build && pnpm run build:api",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r test",
    "db:generate": "pnpm --filter @pureliefde/api db:generate",
    "db:migrate": "pnpm --filter @pureliefde/api db:migrate",
    "db:push": "pnpm --filter @pureliefde/api db:push",
    "db:studio": "pnpm --filter @pureliefde/api db:studio"
